{
  "name": "@openzeppelin/ui-utils",
  "version": "1.2.1",
  "private": false,
  "description": "Shared, framework-agnostic utility functions for the OpenZeppelin UI ecosystem.",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.mts",
  "exports": {
    ".": {
      "types": {
        "import": "./dist/index.d.mts",
        "require": "./dist/index.d.cts"
      },
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "sideEffects": false,
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "utils",
    "helpers",
    "blockchain",
    "form",
    "typescript"
  ],
  "author": "OpenZeppelin",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/OpenZeppelin/openzeppelin-ui",
    "directory": "packages/utils"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.3.1",
    "uuid": "^11.1.0",
    "validator": "^13.15.15",
    "@openzeppelin/ui-types": "^1.5.0"
  },
  "devDependencies": {
    "@types/ga-gtag": "^1.2.0",
    "@types/uuid": "^10.0.0",
    "@types/validator": "^13.15.2",
    "jsdom": "^26.1.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "build": "tsdown",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage --passWithNoTests",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\""
  }
}